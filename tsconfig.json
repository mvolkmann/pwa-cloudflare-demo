{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["bun-types", "web"]
  },
  "include": ["./public", "./src"]
}
